{
  "name": "monadical",
  "version": "4.5.1",
  "description": "A set of monadic data types",
  "scripts": {
    "build": "scripts/build",
    "lint": "scripts/lint",
    "prepare": "npm run build",
    "prettier": "scripts/prettier",
    "test": "scripts/test"
  },
  "files": [
    "*.js",
    "*.js.map",
    "*.d.ts"
  ],
  "author": "Antonio G. Greco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agreco/monadical"
  },
  "devDependencies": {
    "@types/co": "^4.6.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "co": "^4.6.0",
    "eslint": "^7.29.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4",
    "uglify-js": "^3.13.10"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(test).[t]s"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint",
      "pre-push": "npm test"
    }
  }
}
